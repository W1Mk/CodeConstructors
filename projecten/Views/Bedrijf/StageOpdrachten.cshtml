@model IEnumerable<projecten.Models.Domain.StageOpdracht>
@{
    ViewBag.Title = "Stage Opdrachten";
}

<hgroup class="subtitle">
    <h1>@ViewBag.Title</h1>
</hgroup>

<table>
    <tr>
        <th class="firstth">
            @Html.DisplayNameFor(model => model.Naam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Omschrijving)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Semester)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Specialisatie)
        </th>
        <th>
            @Html.DisplayName("Studenten")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Academiejaar)
        </th>
        <th>
            @Html.DisplayName("Mentor")
        </th>
    </tr>
 @if (!Model.Any())
    {
        <tr>
            <td colspan="4" align="center">U hebt nog geen stageopdrachten.</td>
        </tr>
    }

    @foreach (var item in Model)
    {
        <tr>
            <td class="firsttd">
                @Html.DisplayFor(modelItem => item.Naam)
            </td>
            <td class="omschrijving">
                @Html.DisplayFor(modelItem => item.Omschrijving)             
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Semester)
            </td>
            <td class="omschrijving">
                @Html.DisplayFor(modelItem => item.Specialisatie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AantalStudenten) 
            </td>
            <td class="omschrijving">
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Academiejaar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StageMentor)
            </td>
            <td>
                @Html.ActionLink("Wijzigen", "StageOpdrachtWijzigen", new { id = item.StageOpdrachtid}, new {@class="linkbutton"}) |
                @Html.ActionLink("Verwijderen", "Delete", new {id = item.StageOpdrachtid}, new {@class="linkbutton"})
            </td>
        </tr>
    }

</table>

@Html.ActionLink("Voeg een opdracht toe", "StageOpdrachtToevoegen",null, new {@class="linkbutton"})

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
