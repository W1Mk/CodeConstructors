@using System.Collections
@using System.Collections.ObjectModel
@using System.Configuration
@using Microsoft.Ajax.Utilities
@using MySql.Data.MySqlClient
@using projecten.Models.DAL
@{
    ViewBag.Title = "Welkom";
    BedrijfContext context = new BedrijfContext();
    BedrijfRepository rep = new BedrijfRepository(context);
    StageMentorRepository repository = new StageMentorRepository(context);
    var bedrijf = rep.FindBy(User.Identity.Name);
    
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title</h1>

            </hgroup>
        </div>

    </section>
    @if (bedrijf.mentors == null)
    {
        <div class="content-wrapper">
            <h2>Voor u begint!</h2>
            <p>
                @Html.ActionLink("Voeg eerst een stagementor toe", "StageMentorToevoegen", "Bedrijf") voor je aan je stageopdrachten begint.
                
            </p>
        </div>
    }
}
