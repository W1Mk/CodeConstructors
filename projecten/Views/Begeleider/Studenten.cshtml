@using System.Collections
@using System.Collections.ObjectModel
@using System.Configuration
@using Microsoft.Ajax.Utilities
@using MySql.Data.MySqlClient
@using projecten.Models
@using projecten.Models.DAL
@model IEnumerable<projecten.Models.Domain.Student>
@{
    ViewBag.Title = "Studenten";
    BedrijfContext context = new BedrijfContext();
    StudentRepository repository = new StudentRepository(context);
    var opdrachten = repository.FindAll();
}

<div class="subheader">
    @Html.ActionLink("Beschikbare stageopdrachten", "StageOpdrachten", "Begeleider")
    @Html.ActionLink("Alle studenten", "Studenten", "Begeleider")
</div>

<div class="subheader">
    @using(Html.BeginForm("Studenten", "Begeleider"))
{
   <h4>Zoek op naam, email, adres of keuzevak:</h4>
    <input type="text" name="zoekopdracht"/>
    <input type="submit" value="Filter" />
}
</div>
<hgroup class="title">
    <h1>@ViewBag.Title</h1>
</hgroup>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.naam)

        </th>

        <th>
            @Html.DisplayNameFor(model => model.Email)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.tweedeEmail)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.adres)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.gsm)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.keuzevak)
        </th>
        <th></th>
    </tr>
@if (!Model.Any())
    {
        <tr>
            <td colspan="4" align="center">Er zijn geen studenten gevonden!</td>
        </tr>
    }
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.naam, "ProfielStudent", new { id = item.Studentid})
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tweedeEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.adres)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.gsm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.keuzevak)
            </td>
           @* <td>
                @Html.ActionLink("Wijzigen", "StageOpdrachtWijzigen", new { id = item.StageOpdrachtid}) |
                @Html.ActionLink("Verwijderen", "Delete", new {id = item.StageOpdrachtid})
            </td>*@
        </tr>
    }

</table>
