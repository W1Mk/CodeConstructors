@model IEnumerable<projecten.Models.Domain.StageOpdracht>
     <script>
        
</script>       
<table id="Lijst">
    <tr>
        <th class="firstth">Naam</th>
        <th>Omschrijving</th>
        <th>Semester</th>
        <th>Specialisatie</th>
        <th>Mentor</th>
        <th>Studenten</th>
        <th>
            Academiejaar
        </th>
        <th></th>
    </tr>
    
    @if (!Model.Any())
    {
        <tr>
            <td colspan="4" align="center">Er zijn geen stageopdrachten gevonden!</td>
        </tr>
    }

    @foreach (var item in Model)
       
    {
        
        <tr>
            <td class="firsttd">@Html.DisplayFor(modelItem => item.Naam)</td>
            <td class="omschrijving">@Html.DisplayFor(modelItem => item.Omschrijving)</td>
            <td>@Html.DisplayFor(modelItem => item.Semester)</td>
            <td class="omschrijving">@Html.DisplayFor(modelItem => item.Specialisatie)</td>
            <td>@Html.DisplayFor(modelItem => item.StageMentor)</td>
            <td>@Html.DisplayFor(modelItem => item.AantalStudenten)</td>
            <td>
                @Html.DisplayFor(modelItem => item.Academiejaar)
            </td>
            <td>
              
                
                   
           @using (Html.BeginForm("Bekijk", "Student",FormMethod.Get)) { 
               <input type="hidden" id="@item.StageOpdrachtid" value="@item.StageOpdrachtid" name="id" />

                @Html.ActionLink("Soliciteer", "Solicitatie", new{id = item.StageOpdrachtid}, new {@class = "linkbutton"}) 
                
                @Html.ActionLink("Bekijk", "Bekijk", new{id = item.StageOpdrachtid}, new {@class = "linkbutton"})
           }
                    
                
</td>
        </tr>
    }
</table>