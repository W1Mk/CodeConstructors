@model projecten.Models.EersteAanmeldingModel

@{
    ViewBag.Title = "Verander je wachtwoord";
}

<hgroup class="subtitle">
    <h1>@ViewBag.Title</h1>
</hgroup>



@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Log in Form</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email)
                @Html.ValidationMessageFor(m => m.Email)
            </li>
            <li>
                @Html.LabelFor(m => m.Wachtwoord)
                @Html.PasswordFor(m => m.Wachtwoord)
                @Html.ValidationMessageFor(m => m.Wachtwoord)
            </li>
            <li>
                @Html.LabelFor(m => m.Wachtwoordbevestigd)
                @Html.PasswordFor(m => m.Wachtwoordbevestigd)
                @Html.ValidationMessageFor(m => m.Wachtwoordbevestigd)
            </li>
        </ol>
        <input class="linkbutton" type="submit" value="Verander wachtwoord" />
    </fieldset>
    <p>
        @Html.ActionLink("Register", "Register") als je geen account hebt.
    </p>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
