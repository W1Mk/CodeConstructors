@model projecten.Models.LoginModel
@{
    ViewBag.Title = "Login";
}

<hgroup class="subtitle">
    <h1>@ViewBag.Title</h1>
</hgroup>


@using (Html.BeginForm(new {ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Log in Form</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email)
                @Html.ValidationMessageFor(m => m.Email)
            </li>
            <li>
                @Html.LabelFor(m => m.Wachtwoord)
                @Html.PasswordFor(m => m.Wachtwoord)
                @Html.ValidationMessageFor(m => m.Wachtwoord)
            </li>
            <li>
                <p>Is dit de eerste keer dat u zich aanmeldt of wilt u uw wachtwoord veranderen? 
                   Klik @Html.ActionLink("hier", "EersteAanmelding") om je wachtwoord in te stellen.</p>
            </li>
        </ol>
        <input class="linkbutton" type="submit" value="Log in" />
    </fieldset>
    <p>
        @Html.ActionLink("Registreer", "Register") als je geen account hebt.
    </p>
}




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
